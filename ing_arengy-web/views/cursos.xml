<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <!--TREE VIEW-->
        <record id="curso_tree" model="ir.ui.view">
            <field name="name">ing.curso.tree</field>
            <field name="model">ing.curso</field>
            <field name="arch" type="xml">
                <tree>

                    <field name="name"/>

                </tree>
            </field>
        </record>

        <!-- FORM VIEW -->
        <record id="curso_form" model="ir.ui.view">
            <field name="name">ing.cursos.form</field>
            <field name="model">ing.curso</field>
            <field name="arch" type="xml">
                <form string="Cursos">
                    <sheet>
                        <div class="row">
                            <div class="col-md-12">
                                <h1>
                                    <group>
                                        <field name="name" placeholder="Ingrese el Titulo"/>
                                    </group>
                                </h1>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <group>
                                    <field name="inner_image"/>
                                </group>
                            </div>
                            <div class="col-md-6">
                                <group>
                                    <field name="image"/>
                                </group>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <group>
                                    <field name="desc"/>
                                </group>
                            </div>
                        </div>
                         <div class="row">
                            <div class="col-md-12">
                                <group>
                                    <field name="texto_corto"/>
                                </group>
                            </div>
                        </div>
                         <div class="row">
                            <div class="col-md-12">
                                <group>
                                    <field name="categoria_ids"/>
                                </group>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <group>
                                    <field name="tipo"/>
                                </group>
                            </div>
                        </div>
                    </sheet>


                </form>
            </field>
        </record>

        <!--ACTION-->
        <record model="ir.actions.act_window" id="ing_curso_action">
            <field name="name">Cursos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ing.curso</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Gestion de <strong>Cursos</strong>.
                </p>
            </field>
        </record>

         <menuitem id="ing_curso_arengy_web" name="CURSO" action="ing_curso_action" parent="ing_arengy" sequence="20"/>



    </data>
</odoo>